{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "",
    "target": "es5",
    "types": [
      "ajv",
      "node",
      "lodash",
      "webpack-env",
      "moment-timezone",
      "reflect-metadata"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],

      "@config": ["config"],
      "@config/*": ["config/*"],

      "@store": ["app/store"],
      "@store/*": ["app/store/*"],

      "@models": ["app/models"],
      "@models/*": ["app/models/*"],

      "@routes": ["routes"],
      "@routes/*": ["routes/*"],

      "@storage": ["storage"],
      "@storage/*": ["storage/*"],

      "@resources": ["resources"],
      "@resources/*": ["resources/*"],

      "@views": ["resources/views"],
      "@views/*": ["resources/views/*"],

      "@components": ["app/components"],
      "@components/*": ["app/components/*"]
    }
  },
//  "include": ["./**/*.ts"]
    "include": ["./app/app.ts"]
}
